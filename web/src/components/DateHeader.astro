---
interface Props {
  day: string;    // e.g., "FRI"
  date: string;   // e.g., "21.11"
}

const { day, date } = Astro.props;
---

<div class="date-header flex items-center gap-2 mt-6 mb-3 first:mt-0">
  <span class="font-display text-sm font-bold text-text-secondary uppercase">
    {day}
  </span>
  <span class="font-display text-sm text-text-muted">
    {date}
  </span>
  <div class="flex-1 border-t border-border ml-2"></div>
</div>
